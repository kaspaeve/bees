/* Main Container */
.kg-width-wide {
    max-width: 1200px;
    margin: 0 auto;
}

/* Grid Layout */
.grid {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 2rem;
}

/* Supporting Posts (Left and Right Columns) */
.aside .block, .featured-post .block {
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 0.5rem;
}

.aside .hover-title, .featured-post .hover-title {
    font-size: 1.25rem;
    font-weight: 600;
}

.featured-post .hover-title {
    font-size: 2rem;
    font-weight: 700;
}

/* General Post Metadata */
.mt-4 {
    margin-top: 1rem;
}

.mb-6 {
    margin-bottom: 1.5rem;
}

.text-indigo-500 {
    color: #5a67d8;
}

.text-gray-500 {
    color: #6b7280;
}

/* Feed Title and Excerpt */
.feed-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
}

.feed-excerpt {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 1rem;
}

.feed-meta {
    font-size: 0.9rem;
    color: #999;
}

/* Post Image */
.post-image, .featured-post .block {
    width: 100%;
    height: auto;
    border-radius: 5px;
    transition: transform 0.3s;
}

.post-image:hover, .featured-post .block:hover {
    transform: scale(1.05);
}

/* Featured Post Adjustments */
.featured-post {
    grid-column: span 2; /* Make the featured post span two columns */
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.featured-post .feed-title {
    font-size: 2.5rem;
}

.featured-post .feed-excerpt {
    font-size: 1.5rem;
}
